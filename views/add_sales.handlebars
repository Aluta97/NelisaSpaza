<h1>Add sales</h1>

<form action="/sales/add" method="POST">

<div class="container">

	<div class="product">

		<label for="product">Product</label>

	<select class="form-text" class="product" name="prod_id">
		{{#products}}
			<option value="{{id}}">{{description}}</option>
		{{/products}}
 	</select>
	</div>

	<div>
		<label for="date">Date</label>
		<input class="form-text" type="text" name="selling_date" value="{{selling_date}}">
	</div>

  <div>
		<label for="quantity">Quantity</label>
		<input class="form-text" type="number" name="quantity" value="{{quantity}}">
  </div>

  <div>
		<label for="price">Price</label>
		<input class="form-text" type="text" name="selling_prices" value="{{selling_prices}}">
	</div>

	<button type="submit" class="btn btn-primary">Submit</button>

</div>

</form>
