<h1>Products</h1>

<a href="/products/add" type="button" class="btn btn-primary">Add Product</a>

<div class="container">
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>product</th>
        <th>category</th>
      </tr>
    </thead>

    <tbody>
      {{#products}}
        <tr>
          <td>{{description}}</td>
          <td>{{category}}</td>
          <td><a href="/products/edit/{{product_id}}">Edit</a></td>
          <td><a href="/products/delete/{{product_id}}">Delete</a></td>
        </tr>
      {{/products}}
  </tbody>
 </table>
</div>
