<h1>Sales</h1>

<a href="/sales/add">Add sales</a>

<div class="container">
  <table class="table table-striped">
      <tr>
        <th>selling_date</th>
        <th>quantity</th>
        <th>selling_prices</th>
        <th>product</th>
      </tr>
    </thead>
    <tbody>
        {{#sales}}
        <tr>
          <td>{{selling_date}}</td>
          <td>{{quantity}}</td>
          <td>{{selling_prices}}</td>
          <td>{{description}}</td>
          <td><a href="/sales/edit/{{sales_id}}">Edit</a></td>
          <td><a href="/sales/delete/{{sales_id}}">Delete</a></td>
        </tr>
        {{/sales}}
      </tbody>
    </table>
</div>
