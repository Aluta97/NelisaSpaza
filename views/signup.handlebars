<div class="header">
   <h2>Register</h2>
 </div>
 <form action="/signup/add" method="POST">
 <div class="register">
   <input type="text" name="username" value="{{username}}" placeholder="username">
     <input type="text" name="email" value="{{email}}" placeholder="email address">
     <input type="text" name="password" value="{{password}}" placeholder="password">
     <input type="password" required placeholder="Confirm password" id="confirm password"><br>
 <input class="btn btn-primary" type="submit"><br>
 </div>
</form>
