<h1>Edit product</h1>

<form action="/products/update/{{data.id}}" method="POST">

<div "container">
	<div class="category">
		<label for="category">Category</label>

		<select class="form-text" class="text" name="category_id">
			{{#categories}}
				<option {{selected}} value="{{id}}">{{category}}</option>
			{{/categories}}
		</select>
	</div>
	<div class="description">
		<label for="products">Product</label>
		<input class="form-text" type="text" name="description" value="{{data.description}}">
	</div>
	<button type="submit" class="btn btn-primary">Submit</button>
</div>
</form>
